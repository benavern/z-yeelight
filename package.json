{
  "name": "z-yeelight",
  "description": "Control your YeeLight bulbs from your computer.",
  "version": "0.1.0",
  "author": {
    "name": "Benjamin Caradeuc",
    "email": "benjamin@caradeuc.info",
    "url": "https://benjamin.caradeuc.info"
  },
  "main": "electron.js",
  "bin": "light/cli.js",
  "homepage": "./",
  "scripts": {
    "dev": "npm start",
    "start": "nf start -p 3000",
    "start:react": "npx serve ./build",
    "start:react:dev": "BROWSER=none react-scripts start",
    "start:electron": "electron .",
    "start:electron:dev": "nodemon --exec electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "react-scripts build",
    "build:electron": "electron-packager ./ z-yeelight --ignore=src --ignore=public --ignore=Procfile --out=dist --icon=public/logo.png --asar=true --platform=linux --arch=x64 --overwrite",
    "postbuild:electron": "electron-installer-debian --config debian.json",
    "cleanup": "rimraf build dist installers"
  },
  "dependencies": {
    "react": "^16.10.2",
    "react-color": "^2.17.3",
    "react-dom": "^16.10.2",
    "react-router-dom": "^5.1.2",
    "yeelight-awesome": "^1.0.12"
  },
  "devDependencies": {
    "electron": "^6.0.12",
    "electron-installer-debian": "^2.0.1",
    "electron-packager": "^14.0.6",
    "foreman": "^3.0.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.3",
    "react-scripts": "^3.2.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "nodemonConfig": {
    "watch": [
      "electron.js",
      "light/*"
    ],
    "delay": "1000"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
