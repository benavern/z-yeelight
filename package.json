{
  "name": "z-yeelight",
  "description": "Control your YeeLight bulbs from your computer.",
  "version": "0.1.1",
  "author": {
    "name": "Benjamin Caradeuc",
    "email": "benjamin@caradeuc.info",
    "url": "https://benjamin.caradeuc.info"
  },
  "main": "electron.js",
  "bin": "light/cli.js",
  "homepage": "./",
  "scripts": {
    "dev": "npm start",
    "start": "nf start -p 3000",
    "start:react": "npx serve ./build",
    "start:react:dev": "BROWSER=none react-scripts start",
    "start:electron": "electron .",
    "start:electron:dev": "nodemon --exec electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "react-scripts build",
    "build:electron": "electron-packager ./ z-yeelight --ignore=src --ignore=public --ignore=design --ignore=Procfile --out=dist --ignore=installers --icon=public/logo.png --platform=linux --arch=x64 --asar --overwrite",
    "postbuild:electron": "electron-installer-debian --config debian.json",
    "cleanup": "rimraf build dist installers"
  },
  "dependencies": {
    "@jaames/iro": "^5.2.3",
    "lodash": "^4.17.20",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "yeelight-awesome": "^1.0.12"
  },
  "devDependencies": {
    "electron": "^10.1.3",
    "electron-devtools-installer": "^3.1.1",
    "electron-installer-debian": "^3.1.0",
    "electron-packager": "^15.1.0",
    "foreman": "^3.0.1",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.5",
    "react-scripts": "^3.4.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "nodemonConfig": {
    "watch": [
      "electron.js",
      "light/*",
      "db/*"
    ],
    "delay": "1000"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
